<Window x:Class="WorkTimeTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="WorkTimeTracker - System Rejestracji Czasu Pracy" 
        Height="700" Width="1000"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#BDBDBD" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5,3" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#BDBDBD" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="#BDBDBD" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Foreground" Value="#1976D2" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="0,0,15,0">
            <GroupBox Header="Lista Pracowników" Style="{StaticResource GroupBoxStyle}">
                <StackPanel>
                    <ListBox x:Name="EmployeesList" Height="300" 
                            DisplayMemberPath="Display" 
                            SelectionChanged="EmployeesList_SelectionChanged"
                            BorderThickness="0"
                            Background="Transparent"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="RefreshButton" ToolTip="Odśwież listę pracowników"
                                Content="Odśwież" Width="80" Margin="0,0,8,0" 
                                Click="RefreshButton_Click" />
                        <Button x:Name="EditEmployeeButton" ToolTip="Edytuj wybranego pracownika"
                                Content="Edytuj" Width="80" Margin="0,0,8,0" 
                                Click="EditEmployeeButton_Click" />
                        <Button x:Name="DeleteEmployeeButton" ToolTip="Usuń wybranego pracownika"
                                Content="Usuń" Width="80" Background="#F44336"
                                Click="DeleteEmployeeButton_Click" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Generowanie Raportu" Style="{StaticResource GroupBoxStyle}">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Miesiąc:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="0" Grid.Column="0"/>
                        <ComboBox x:Name="ReportMonthPicker" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Rok:" VerticalAlignment="Center" Margin="0,0,10,0" Grid.Row="1" Grid.Column="0"/>
                        <ComboBox x:Name="ReportYearPicker" Grid.Row="1" Grid.Column="1"/>
                    </Grid>
                    <Button x:Name="GenerateReportButton" 
                            Content="Generuj raport miesięczny" 
                            Background="#4CAF50"
                            Margin="0,10,0,5"
                            ToolTip="Generuj raport miesięczny dla wybranego pracownika"
                            Click="GenerateReportButton_Click" />
                    <Button x:Name="GenerateEmployeeReportButton" 
                            Content="Generuj raport pracownika" 
                            Background="#4CAF50"
                            ToolTip="Generuj pełny raport dla wybranego pracownika"
                            Click="GenerateEmployeeReportButton_Click" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Statystyki" Style="{StaticResource GroupBoxStyle}">
                <StackPanel>
                    <TextBox x:Name="StatsBox" Height="100" 
                            IsReadOnly="True" TextWrapping="Wrap" 
                            Background="#FAFAFA"
                            Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Statystyki szczegółowe:" VerticalAlignment="Center"/>
                        <Button x:Name="ShowDetailedStatsButton"
                                Content="Pokaż" Width="80"
                                Grid.Column="1"
                                Click="ShowDetailedStatsButton_Click"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1">
            <GroupBox Header="Zarządzanie Pracownikiem" Style="{StaticResource GroupBoxStyle}">
                <StackPanel>
                    <TextBlock x:Name="EmployeeFormTitle" Style="{StaticResource HeaderStyle}"/>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Imię:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="0"/>
                        <TextBox x:Name="FirstNameBox" Grid.Column="1" Margin="0,0,0,5" Grid.Row="0"/>

                        <TextBlock Text="Nazwisko:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="1"/>
                        <TextBox x:Name="LastNameBox" Grid.Column="1" Margin="0,0,0,5" Grid.Row="1"/>

                        <TextBlock Text="Stanowisko:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="2"/>
                        <TextBox x:Name="PositionBox" Grid.Column="1" Margin="0,0,0,5" Grid.Row="2"/>

                        <TextBlock Text="Stawka (PLN/h):" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="3"/>
                        <TextBox x:Name="RateBox" Grid.Column="1" Margin="0,0,0,5" Grid.Row="3"/>
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="AddEmployeeButton" Content="Dodaj pracownika" 
                                Width="150" Background="#4CAF50"
                                Click="AddEmployeeButton_Click" />
                        <Button x:Name="SaveEmployeeButton" Content="Zapisz zmiany" 
                                Width="150" Margin="8,0,0,0" Background="#FFA000"
                                Click="SaveEmployeeButton_Click" Visibility="Collapsed" />
                        <Button x:Name="CancelEditButton" Content="Anuluj" 
                                Width="80" Margin="8,0,0,0" Background="#757575"
                                Click="CancelEditButton_Click" Visibility="Collapsed" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Rejestracja Czasu Pracy" Style="{StaticResource GroupBoxStyle}">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ID Pracownika:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="0"/>
                        <TextBox x:Name="EmployeeIdForEntryBox" Grid.Column="1" Margin="0,0,0,5" Grid.Row="0"/>

                        <TextBlock Text="Data:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="1"/>
                        <DatePicker x:Name="EntryDatePicker" Grid.Column="1" Margin="0,0,0,5" Grid.Row="1"
                                  SelectedDate="{x:Static sys:DateTime.Today}" />

                        <TextBlock Text="Liczba godzin:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="2"/>
                        <TextBox x:Name="HoursBox" Grid.Column="1" Margin="0,0,0,5" Grid.Row="2"/>

                        <TextBlock Text="Urlop:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="3"/>
                        <CheckBox x:Name="IsLeaveCheck" Grid.Column="1" Margin="0,0,0,5" Grid.Row="3" VerticalAlignment="Center"/>

                        <TextBlock Text="Nadgodziny:" VerticalAlignment="Center" Margin="0,0,10,5" Grid.Row="4"/>
                        <CheckBox x:Name="IsOvertimeCheck" Grid.Column="1" Margin="0,0,0,5" Grid.Row="4" VerticalAlignment="Center"/>
                    </Grid>
                    <Button x:Name="AddEntryButton" Content="Dodaj wpis" 
                            Width="150" Margin="0,10,0,0" Background="#4CAF50"
                            Click="AddEntryButton_Click" 
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Raport" Style="{StaticResource GroupBoxStyle}">
                <TextBox x:Name="ReportBox" Height="150" 
                        IsReadOnly="True" TextWrapping="Wrap" 
                        VerticalScrollBarVisibility="Auto"
                        Background="#FAFAFA"/>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>

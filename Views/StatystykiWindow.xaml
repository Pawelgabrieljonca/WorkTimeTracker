<Window x:Class="WorkTimeTracker.Views.StatystykiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegółowe Statystyki Pracownika" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="EmployeeNameBlock" 
                      FontSize="18" FontWeight="Bold" 
                      Margin="0,0,0,10"/>
            
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Całkowite godziny:" Grid.Column="0" Grid.Row="0" Margin="0,0,10,5"/>
                <TextBlock x:Name="TotalHoursBlock" Grid.Column="1" Grid.Row="0" FontWeight="Bold"/>
                
                <TextBlock Text="Nadgodziny:" Grid.Column="2" Grid.Row="0" Margin="20,0,10,5"/>
                <TextBlock x:Name="OvertimeHoursBlock" Grid.Column="3" Grid.Row="0" FontWeight="Bold"/>
                
                <TextBlock Text="Dni urlopowe:" Grid.Column="0" Grid.Row="1" Margin="0,0,10,5"/>
                <TextBlock x:Name="VacationDaysBlock" Grid.Column="1" Grid.Row="1" FontWeight="Bold"/>
                
                <TextBlock Text="Średnia dzienna:" Grid.Column="2" Grid.Row="1" Margin="20,0,10,5"/>
                <TextBlock x:Name="AverageHoursBlock" Grid.Column="3" Grid.Row="1" FontWeight="Bold"/>
            </Grid>
        </StackPanel>

        <GroupBox Header="Statystyki miesięczne" Grid.Row="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Rok:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="YearPicker" Width="100" 
                             SelectionChanged="YearPicker_SelectionChanged"/>
                </StackPanel>

                <DataGrid x:Name="MonthlyStatsGrid" 
                         Grid.Row="1"
                         AutoGenerateColumns="False" 
                         IsReadOnly="True"
                         GridLinesVisibility="All"
                         AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Miesiąc" Binding="{Binding Miesiac}" Width="*"/>
                        <DataGridTextColumn Header="Godziny" Binding="{Binding Godziny}" Width="*"/>
                        <DataGridTextColumn Header="Nadgodziny" Binding="{Binding Nadgodziny}" Width="*"/>
                        <DataGridTextColumn Header="Urlopy" Binding="{Binding Urlopy}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>